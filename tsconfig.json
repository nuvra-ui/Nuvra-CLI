{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "types": ["node"],
    "noEmitOnError": true,
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "node",
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,

    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
